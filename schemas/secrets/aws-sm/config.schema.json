{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWS Secrets Manager Provider Config",
  "type": "object",
  "properties": {
    "tenant_id": { "type": "string" },
    "environment": { "type": "string", "enum": ["dev", "stage", "prod"] },
    "region": { "type": "string" },
    "namespace_prefix": { "type": "string" },
    "assume_role_arn": { "type": "string" },
    "kms_key_id": { "type": "string" },
    "credentials": {
      "type": "object",
      "properties": {
        "access_key_id": { "type": "string", "x-secret": true },
        "secret_access_key": { "type": "string", "x-secret": true },
        "web_identity_token_file": { "type": "string" }
      },
      "additionalProperties": false
    },
    "audit_sink_ref": { "type": "string" },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["tenant_id", "environment", "region", "namespace_prefix", "audit_sink_ref"],
  "additionalProperties": false
}
