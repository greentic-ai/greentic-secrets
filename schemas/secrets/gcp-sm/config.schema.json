{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GCP Secret Manager Provider Config",
  "type": "object",
  "properties": {
    "tenant_id": { "type": "string" },
    "environment": { "type": "string", "enum": ["dev", "stage", "prod"] },
    "project_id": { "type": "string" },
    "location": { "type": "string" },
    "auth_mode": { "type": "string", "enum": ["workload_identity", "service_account_json"] },
    "service_account_json": { "type": "string", "x-secret": true },
    "namespace_prefix": { "type": "string" },
    "audit_sink_ref": { "type": "string" },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["tenant_id", "environment", "project_id", "auth_mode", "namespace_prefix", "audit_sink_ref"],
  "additionalProperties": false
}
