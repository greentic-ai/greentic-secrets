{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vault KV v2 Provider Config",
  "type": "object",
  "properties": {
    "tenant_id": { "type": "string" },
    "environment": { "type": "string", "enum": ["dev", "stage", "prod"] },
    "vault_addr": { "type": "string", "format": "uri" },
    "mount_path": { "type": "string" },
    "auth_mode": { "type": "string", "enum": ["token", "approle", "kubernetes"] },
    "token": { "type": "string", "x-secret": true },
    "role_id": { "type": "string", "x-secret": true },
    "secret_id": { "type": "string", "x-secret": true },
    "k8s_jwt": { "type": "string", "x-secret": true },
    "k8s_role": { "type": "string" },
    "namespace_prefix": { "type": "string" },
    "audit_sink_ref": { "type": "string" },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["tenant_id", "environment", "vault_addr", "mount_path", "auth_mode", "namespace_prefix", "audit_sink_ref"],
  "additionalProperties": false
}
