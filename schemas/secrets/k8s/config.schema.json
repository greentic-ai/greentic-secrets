{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kubernetes Secrets Provider Config",
  "type": "object",
  "properties": {
    "tenant_id": { "type": "string" },
    "environment": { "type": "string", "enum": ["dev", "stage", "prod"] },
    "api_server": { "type": "string" },
    "namespace": { "type": "string" },
    "auth_mode": { "type": "string", "enum": ["in_cluster", "kubeconfig", "token"] },
    "bearer_token": { "type": "string", "x-secret": true },
    "kubeconfig_b64": { "type": "string", "x-secret": true },
    "namespace_prefix": { "type": "string" },
    "audit_sink_ref": { "type": "string" },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["tenant_id", "environment", "namespace", "auth_mode", "namespace_prefix", "audit_sink_ref"],
  "additionalProperties": false
}
