{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Azure Key Vault Provider Config",
  "type": "object",
  "properties": {
    "tenant_id": { "type": "string" },
    "environment": { "type": "string", "enum": ["dev", "stage", "prod"] },
    "vault_url": { "type": "string", "format": "uri" },
    "auth_mode": { "type": "string", "enum": ["managed_identity", "service_principal", "device_code"] },
    "client_id": { "type": "string" },
    "client_secret": { "type": "string", "x-secret": true },
    "namespace_prefix": { "type": "string" },
    "audit_sink_ref": { "type": "string" },
    "labels": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "required": ["tenant_id", "environment", "vault_url", "auth_mode", "namespace_prefix", "audit_sink_ref"],
  "additionalProperties": false
}
