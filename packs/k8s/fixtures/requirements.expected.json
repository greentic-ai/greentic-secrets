{
  "provider_id": "greentic.secrets.k8s",
  "config": {
    "required": [
      "tenant_id",
      "environment",
      "namespace",
      "auth_mode",
      "namespace_prefix",
      "audit",
      "timeouts",
      "retry_policy",
      "redaction_policy"
    ],
    "optional": [
      "api_server",
      "labels"
    ],
    "constraints": {
      "enum": {
        "environment": [
          "dev",
          "stage",
          "prod"
        ],
        "auth_mode": [
          "in_cluster",
          "kubeconfig",
          "token"
        ]
      }
    }
  },
  "secrets": {
    "required": [
      "audit_sink_credentials"
    ],
    "optional": [
      "k8s_bearer_token",
      "kubeconfig_b64"
    ],
    "constraints": {}
  },
  "capabilities": {
    "supports_read": true,
    "supports_write": true,
    "supports_delete": true
  },
  "setup_needs": {
    "public_base_url": false,
    "oauth": false,
    "subscriptions": false
  }
}
