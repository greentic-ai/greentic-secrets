{
  "secret_requirements": [
    {
      "id": "vault_token",
      "type": "string",
      "description": "Vault token for token auth mode.",
      "required": false,
      "env": "VAULT_TOKEN",
      "redact": true
    },
    {
      "id": "vault_role_id",
      "type": "string",
      "description": "Vault AppRole role_id for approle auth.",
      "required": false,
      "env": "VAULT_ROLE_ID",
      "redact": true
    },
    {
      "id": "vault_secret_id",
      "type": "string",
      "description": "Vault AppRole secret_id for approle auth.",
      "required": false,
      "env": "VAULT_SECRET_ID",
      "redact": true
    },
    {
      "id": "k8s_jwt",
      "type": "string",
      "description": "Kubernetes service account JWT for vault kubernetes auth.",
      "required": false,
      "env": "K8S_JWT",
      "redact": true
    },
    {
      "id": "k8s_role",
      "type": "string",
      "description": "Vault role name for kubernetes auth.",
      "required": false,
      "env": "K8S_ROLE",
      "redact": true
    },
    {
      "id": "audit_sink_credentials",
      "type": "string",
      "description": "Credentials or token for the configured audit sink (Splunk/GCP/Azure/http).",
      "required": true,
      "redact": true
    }
  ]
}
